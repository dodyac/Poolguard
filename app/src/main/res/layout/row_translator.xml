<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x8dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/x8dp"
    android:paddingEnd="@dimen/x8dp">

    <com.acxdev.shimmer.widget.ShimmerText
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <com.acxdev.shimmer.widget.ShimmerText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x4dp"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_small"
        app:shimmerTextWidth="0.5" />

    <com.acxdev.shimmer.widget.ShimmerText
        android:id="@+id/releaseVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_small"
        app:shimmerTextWidth="0.3" />
</LinearLayout>