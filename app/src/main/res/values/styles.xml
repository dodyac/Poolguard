<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.Poolguard">
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="buttonStyle">
        <item name="cornerRadius">@dimen/card_corner_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/x30dp</item>
        <item name="android:paddingEnd">@dimen/x30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cardViewStyle">
        <item name="rippleColor">?colorPrimary</item>
        <item name="cardCornerRadius">@dimen/card_corner_small</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">?colorControlActivated</item>
    </style>

    <style name="cardViewStyleBig">
        <item name="cardCornerRadius">@dimen/card_corner</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">?colorSwitchThumbNormal</item>
    </style>

    <style name="switchStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">-10dp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:thumb">@drawable/selector_switch</item>
        <item name="track">@drawable/selector_track</item>
        <item name="switchPadding">@dimen/padding_parent</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="sliderStyle">
        <item name="sliderAnimationDuration">600</item>
        <item name="sliderAutoCycleDirection">back_and_forth</item>
        <item name="sliderAutoCycleEnabled">true</item>
        <item name="sliderIndicatorAnimationDuration">600</item>
        <item name="sliderIndicatorGravity">center_horizontal|bottom</item>
        <item name="sliderIndicatorMarginTop">-25dp</item>
        <item name="sliderIndicatorOrientation">horizontal</item>
        <item name="sliderIndicatorPadding">1.2dp</item>
        <item name="sliderIndicatorRadius">1.2dp</item>
        <item name="sliderIndicatorSelectedColor">?colorPrimary</item>
        <item name="sliderIndicatorUnselectedColor">?colorBackgroundFloating</item>
        <item name="sliderStartAutoCycle">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tilStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?colorControlActivated</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_small</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_marginBottom">@dimen/x10dp</item>
        <item name="materialThemeOverlay">@style/etStyle</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="suffixTextColor">@color/text</item>
        <item name="prefixTextColor">@color/text</item>
        <item name="endIconTint">@color/selector_icon</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:colorControlHighlight">@color/Color_Orange</item>
    </style>

    <style name="etStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="actStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">?colorControlActivated</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_small</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_marginBottom">@dimen/x10dp</item>
        <item name="materialThemeOverlay">@style/acteStyle</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="suffixTextColor">@color/text</item>
        <item name="prefixTextColor">@color/text</item>
        <item name="endIconTint">@color/selector_icon</item>
    </style>

    <style name="acteStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="TabLayout_Theme" >
        <item name="android:singleLine">true</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="sliderBarStyle">
        <item name="android:stepSize">1</item>
        <item name="trackColorInactive">?colorBackgroundFloating</item>
        <item name="thumbColor">?colorPrimary</item>
        <item name="tickColor">@android:color/transparent</item>
        <item name="trackColorActive">?colorPrimary</item>
        <item name="tickColorActive">?colorPrimary</item>
        <item name="tickColorInactive">?colorBackgroundFloating</item>
        <item name="haloColor">?colorBackgroundFloating</item>
    </style>
</resources>